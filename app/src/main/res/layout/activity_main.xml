<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        android:id="@+id/miToolbar"
        layout="@layout/toolbar"
        />

    <!---
    https://youtu.be/KF-OddyWamg?t=4947
    https://youtu.be/KF-OddyWamg?t=5432
    -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi text view"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="@dimen/margen_boton"
            android:layout_marginBottom="@dimen/margen_boton"
            android:src="@drawable/bomb"
            app:elevation="@dimen/elevacion_boton"
            app:fabSize="normal"
            app:borderWidth="0dp"
             />
    </FrameLayout>

</LinearLayout>